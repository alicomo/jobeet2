{% extends "ShaduliJobeetBundle::layout.html.twig" %}
{% block title %}
    {{ parent() }}
    :: {{ "%s is looking for a %s"|format(job.company, job.position) }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset('bundles/shadulijobeet/css/job.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block container %}
<div id="job">
    <h1>{{ job.company }}</h1>
    <h2>{{ job.location }}</h2>
    <h3>
        {{ job.position }}
        <small> - {{ job.type }}</small>
    </h3>

    {% if job.logo %}
    <div class="logo">
        <a href="{{ job.url }}">
            <img src="/uploads/jobs/{{ job.logo }}"
                 alt="{{ job.company }} logo" />
        </a>
    </div>
    {% endif %}

    <div class="description">
        {{ job.description }}
    </div>

    <h4>How to apply?</h4>

    <p class="how_to_apply">{{ job.howtoapply }}</p>

    <div class="meta">
        <small>posted on {{ job.createdat|date('d-m-Y') }}</small>
    </div>

    <div style="padding: 20px 0">
        <a href="{{ path('job_edit', { 'id': job.id }) }}">
            Edit
        </a>
    </div>
</div>
{% endblock %}



