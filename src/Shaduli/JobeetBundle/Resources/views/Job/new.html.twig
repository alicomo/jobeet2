{% extends "ShaduliJobeetBundle::layout.html.twig" %}
{% block title %}
    {{ parent() }}
:: {{ "Post a Job" }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset('bundles/shadulijobeet/css/job.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block container %}
<h1>Post a Job</h1>
<form action="{{ path('shaduli_jobeet_job_create') }}" method="post" {{ form_enctype(form) }}>
    <table id="job_form">
        <tfoot>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Preview your job" />
                </td>
            </tr>
        </tfoot>
        <tbody>
        {% form_theme form 'ShaduliJobeetBundle:Form:form_table_layout.html.twig' %}
        {{ form_widget(form) }}


        </tbody>
    </table>

</form>
{% endblock %}

